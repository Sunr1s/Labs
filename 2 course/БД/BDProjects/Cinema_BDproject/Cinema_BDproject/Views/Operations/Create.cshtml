@model User
<section class="w3l-contact-1">
    <div class="contacts-9 py-5">
        <div class="container py-lg-4">
            <div class="headerhny-title text-center">
                 <h4 class="sub-title text-center">Create User</h4>
                @if (ViewBag.Message != null)
                {
                    <h3 class="hny-title mb-0">@ViewBag.Message</h3>
                }
                <div asp-validation-summary="All" class="text-danger"></div>     
                <div class="contact-view mt-lg-5 mt-4">
                    <div class="conhny-form-section">
                        <form method="post" class="formhny-sec">
                            <div class="form-grids">
                                <div class="form-input">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control" type="text" placeholder="Enter your name *" />
                                </div>
                                <div class="form-input">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" id="w3lName" placeholder="Enter your email *" />
                                </div>
                                <div class="form-input">
                                    <input asp-for="Password" class="form-control" type="text" placeholder="Enter your password *" />
                                </div>
                            </div>
                            <div class="submithny text-right mt-4">
                                <button class="btn read-button" type="submit">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>